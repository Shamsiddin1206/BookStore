<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/farenheit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="451 Fahrenheit"
        android:layout_marginStart="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/photo"
        app:layout_constraintTop_toTopOf="@id/photo" />
    <TextView
        android:id="@+id/yozuv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rey Bredberi"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/photo"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name2"
        app:layout_constraintStart_toStartOf="@id/yozuv_name"
        app:layout_constraintTop_toBottomOf="@id/yozuv_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text=""/>
    <ImageView
        android:id="@+id/start"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/photo"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/name2"
        app:layout_constraintBottom_toBottomOf="@id/photo"
        android:src="@drawable/star"/>
    <TextView
        android:id="@+id/reyting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/start"
        app:layout_constraintTop_toTopOf="@id/start"
        android:text="4.6"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/yurak"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/yurak1"
        app:layout_constraintStart_toEndOf="@id/reyting"
        app:layout_constraintTop_toTopOf="@id/reyting"
        app:layout_constraintBottom_toBottomOf="@id/reyting"
        android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>